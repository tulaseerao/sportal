<h2>Grades</h2>

<table id='grades'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% grades.each do |grade| %>
      <tr>
        <td><%= link_to grade.name, admin_grade_path(grade) %></td>
        <td><%= grade.description %></td>
        <td><%= link_to 'Edit', edit_admin_grade_path(grade) %> | 
        <%= link_to 'Destroy', admin_grades_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grade', new_admin_grade_path %>
