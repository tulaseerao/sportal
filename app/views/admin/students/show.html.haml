%p#notice= notice
%h2 
  Details for
  = student.name
%table
  %tr
    %th Export ID
    %td= student.export_id
    %th First Name
    %td= student.first_name
  %tr
    %th Last Name
    %td= student.last_name
    %th Preferred Name
    %td= student.preferred_name
  %tr
    %th Email
    %td= student.email
    %th Active
    %td= student.active
= link_to 'Edit', edit_admin_student_path(student)
|
\#{link_to 'Back', admin_students_path}
%h4
  = student.possessive_name
  Current Courses:
  = render :partial => 'admin/courses/list', :locals => {:courses => student.c_courses, :clazz => 'ccourses'}
%br/
%br/
%h4
  = student.possessive_name
  Recommended Courses:
  = render :partial => 'admin/courses/list', :locals => {:courses => student.r_courses, :clazz => 'rcourses'}
%br/
%br/
%h4
  = student.possessive_name
  Taken Courses:
  = render :partial => 'admin/courses/list', :locals => {:courses => student.t_courses, :clazz => 'tcourses'}
