.navbar.navbar-fluid-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{href: "#"} Sportal
      .container-fluid.nav-collapse
        %ul.nav
          %li= link_to "Departmental Course Request", "/"
          %li= link_to "Electives", "/electives"
          %li= link_to "Course Registration Summary", "/summary"
        %div{:style => 'text-align:right;'}
          = link_to current_user.email, root_path rescue ''
          | 
          = link_to "logout", "/users/sign_out"  unless current_user.blank?
          | 
          = link_to "login", "/users/sign_in"  if current_user.blank?
      / /.nav-collapse
